@model Kent.Business.Core.Models.Pages.PageManageModel

@Html.HiddenFor(m => m.ID)

<div class="form-group">
    <label for="name" class="col-md-3">Tên</label>
    @Html.TextBoxFor(m => m.Title, new { @class = "col-md-8" })
</div>
<div class="form-group">
    <label for="name" class="col-md-3">Url</label>
    @Html.TextBoxFor(m => m.FriendlyUrl, new { @class = "col-md-8" })
</div>
<div class="form-group form_item">
    <label for="email" class="col-md-3">Content</label>
    @Html.TextAreaFor(m => m.Content, new { @class = "col-md-8" })
</div>
<div class="form-group form_item">
    <label for="email" class="col-md-3">Is home page</label>
    @Html.CheckBoxFor(m => m.IsHomePage, new { @class = "col-md-8" })
</div>
<div class="form-group form_item">
    <label for="email" class="col-md-3">Header Template</label>
    @Html.DropDownListFor(m => m.HeaderTemplate, Model.HeaderTemplateList, new { @class = "col-md-8" })
</div>
<div class="form-group form_item">
    <label for="email" class="col-md-3">Footer Template</label>
    @Html.DropDownListFor(m => m.FooterTemplate, Model.FooterTemplateList, new { @class = "col-md-8" })
</div>
<button type="submit" class="btn btn-primary">Submit</button>

